<div class="btn-group pull-right" role="group" aria-label="...">
      <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound"), :class => "btn btn-default", :data => {:toggle => "button"}) %>
      <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound"), :class => "btn btn-default") %>
      <%= link_to("按照发表时间排序", jobs_path, :class => "btn btn-default") %>
</div>

<table class="table table-boldered">
  <thead>
    <tr>
      <td>职缺</td>
      <!-- <td>薪资下限</td> -->
      <td>薪资范围</td>
      <td>刊登时间</td>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
    <tr>
      <td>
        <%= link_to(job.title, job_path(job), :target => "_blank" ) %>
      </td>
      <td width="30%">
        <span class="badge badge-info">
          <span class="fa fa-rmb"></span><%= job.wage_lower_bound %> - <%= job.wage_upper_bound %> 元
        </span>
      </td>

      <!-- <td><%= job.wage_lower_bound %></td>
      <td><%= job.wage_upper_bound %></td> -->
      <!-- <td>
        <%= link_to("Edit", edit_job_path(job)) %> |
        <%= link_to("Destroy", job_path(job), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
      </td> -->
      <td width="10%">
        <%= local_time(job.created_at,'%B %e, %Y %l:%M%p') %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center col-md-12 pagination">
  <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
</div>
